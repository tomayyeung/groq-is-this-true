{
    "manifest_version": 3,
    "name": "@groq is this true?",
    "version": "1.0",
    "description": "Fact checker extension",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "dist/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "selection.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Get Selected Text"
    }
    ,
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}